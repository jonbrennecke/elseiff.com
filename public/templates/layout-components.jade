- var host = "elseiff.com";

doctype html
html(lang="en")
	head
		script(src="../scripts/bower_components/jquery/dist/jquery.min.js")
		script(src="../scripts/bower_components/jquery-ui/ui/minified/jquery-ui.min.js")
		link( rel="stylesheet" type="text/css" href="../css/stylesheets/main.css" )
		script#requirejs( data-main="../scripts/main.js" src="../scripts/bower_components/requirejs/require.js" )
		block head
	body
		block body

		section.header-wrap
			div.header.wireframe
				a.title( href="/") elseiff.com<span>[beta]</span>
				- if ( user && user.name )
					a.header-item( href="/signout" ) signout
					a.header-item #{user.name}
				- else
					a.header-item( href="/signin" ) signin
				div.header-item.search-wrap
					div.search
						input( name="search" type="text" placeholder="search" )
						a.fa.fa-search
				block header

		section.page-container
			div.loading-spinner.fa.fa-spin.fa-spinner
			block page-container